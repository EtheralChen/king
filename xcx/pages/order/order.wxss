.orders_type_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 40rpx;
  
}
.orders_type{
  position: relative;
  width: 320rpx;
  height: 220rpx;
  padding: 40rpx 0 0 24rpx;
}
.orders_bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%
}
.orders_title{
  position: relative;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  padding-left: 34rpx;
}
.orders_title::before{
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 10rpx;
  height: 10rpx;
  background-color: #688DFF;
  border-radius: 50%;
}
.orders_type:last-child .orders_title:before{
   background-color: #FF7467;
}
    <view class="footer-item" catchtap="selectSize">
      <view class="footer-photograph">
        <image class="img-photograph" src="{{ico_camera}}"/>
        <text>拍照</text>
        <!-- <button class="btn-authorize" open-type="getAuthorize" scope="phoneNumber"></button> -->
      </view>
    </view>
    <view class="footer-item" catchtap="selectSize">
      <image class="img-footer" src="{{ico_size}}"/>
      <text>常见尺寸</text>
      <!-- <button class="btn-authorize" open-type="getAuthorize" scope="phoneNumber"></button> -->
    </view>

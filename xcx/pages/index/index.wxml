  <image class="img-skill" src="{{ico_skill_white}}"/>
  <text>如何使用</text>
</view>
<view class="skill-box contact-box">
  <image class="img-skill" src="{{ico_contact}}"/>
  <text>联系客服</text>
  <button class="btn-authorize" open-type="contact"></button>
</view>
<view class="footer-box">
  <view class="footer-content">
    <view class="footer-item" catchtap="navToOrder">
      <image class="img-footer" src="{{ico_order}}"/>
      <text>订单</text>
      <!-- <button class="btn-authorize" open-type="getAuthorize" scope="phoneNumber"></button> -->
